generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Vocabulary {
  id                Int                 @id @default(autoincrement())
  word              String              @unique(map: "idx_vocabulary_word") @db.VarChar(150)
  vocabularyMeaning VocabularyMeaning[]
  @@map("vocabulary")
}

model VocabularyMeaning {
  id                Int        @id @default(autoincrement())
  vocabularyId      Int        @map("vocabulary_id")
  partOfSpeech      String     @db.VarChar(30) @map("part_of_speech")
  meaning           String     @db.VarChar(255)
  ipa               String?    @db.VarChar(255)
  pronunciation     String?    @db.VarChar(255)
  example           String?    @db.VarChar(255)
  note              String?    @db.VarChar(255)
  usage             String?    @db.VarChar(500)
  englishDefinition String?    @db.VarChar(500) @map("english_definition")
  vocabulary        Vocabulary @relation(fields: [vocabularyId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([vocabularyId], map: "idx_vocabulary_meaning_vocabulary_id")
  @@map("vocabulary_meaning")
}